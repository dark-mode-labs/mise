{% comment %}
  Props:
  - items (comma string)
  - speed (int)
  - direction ('left' | 'right') - Default: 'left'
{% endcomment %}

{% assign dir = direction | default: 'left' %}
{% assign anim_class = 'animate-marquee' %}

{% if dir == 'right' %}
  {% assign anim_class = 'animate-marquee-reverse' %}
{% endif %}

<div class="w-full overflow-hidden py-3">
  <div
    class="flex w-max gap-12 {{ anim_class }}"
    style="animation-duration: {{ speed | default: 15 }}s;"
  >
    {% for i in (1..4) %}
      <div class="flex gap-12 shrink-0">
        {% assign list = items | split: ',' %}
        {% for item in list %}
          <div class="flex items-center gap-4">
            <span class="text-sm font-bold uppercase tracking-widest whitespace-nowrap">{{ item }}</span>
            <span class="opacity-25">â€¢</span>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</div>
