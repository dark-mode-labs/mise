{% comment %}
  Props:
  - label: string
  - url: string
  - style: 'primary', 'outline', 'link'
  - width: 'full' or 'auto'
{% endcomment %}

{% assign width_class = 'inline-flex' %}
{% if width == 'full' %}
  {% assign width_class = 'w-full flex justify-center' %}
{% endif %}

{% comment %}
  LOGIC:
  - Solid/Outline buttons need padding (px-6 py-3).
  - Text Links must have ZERO padding (p-0) to align flush with text.
{% endcomment %}
{% assign padding_class = 'px-6 py-3' %}

{% case style %}
  {% when 'primary' %}
    {% assign style_class = 'btn-primary' %}
  {% when 'outline' %}
    {% assign style_class = 'btn-outline' %}
  {% when 'link' %}
    {% assign style_class = 'btn-link' %}
    {% assign padding_class = 'p-0' %}
    {% comment %} Kill padding for links {% endcomment %}
  {% else %}
    {% assign style_class = 'btn-primary' %}
{% endcase %}

<a
  href="{{ url }}"
  class="{{ width_class }} {{ padding_class }} {{ style_class }} text-sm font-bold uppercase tracking-wide transition-all duration-200 ease-in-out"
>
  {{ label }}
</a>
