{% assign icon_classes = class | default: 'w-6 h-6' %}
{% assign base_name = name %}
{% assign rotate_class = '' %}

{% if name contains 'chevron-' or name contains 'arrow-' %}
  {% if name contains '-left' %}
    {% assign rotate_class = 'rotate-180' %}
  {% elsif name contains '-up' %}
    {% assign rotate_class = '-rotate-90' %}
  {% elsif name contains '-down' %}
    {% assign rotate_class = 'rotate-90' %}
  {% endif %}

  {% assign base_name = name | remove: '-left' | remove: '-right' | remove: '-up' | remove: '-down' %}
{% endif %}

<svg
  class="icon icon-{{ name }} {{ icon_classes }} {{ rotate_class }} transition-transform"
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
>
  {% case base_name %}
    {% when 'chevron' %}
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>

    {% when 'arrow' %}
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>

    {% when 'star' %}
      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" stroke-width="2"/>

    {% when 'bag' %} <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
    {% when 'search' %} <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
    {% when 'user' %} <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2M12 11a4 4 0 100-8 4 4 0 000 8z"/>
    {% when 'menu' %} <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
    {% when 'close' %} <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>

    {% else %}
      <circle cx="12" cy="12" r="10" stroke-width="2"/>
  {% endcase %}
</svg>
