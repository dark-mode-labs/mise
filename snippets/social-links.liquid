{% assign networks = 'instagram,facebook,tiktok,twitter,yelp' | split: ',' %}

<div class="flex gap-4 {{ class }}">
  {% for network in networks %}
    {% assign setting_key = 'social_' | append: network | append: '_link' %}
    {% assign link_url = settings[setting_key] %}

    {% if link_url != blank %}
      <a
        href="{{ link_url }}"
        class="text-current hover:opacity-70 transition-opacity"
        aria-label="{{ network | capitalize }}"
        target="_blank"
        rel="noopener"
      >
        {% render 'icon', name: network, class: 'w-5 h-5' %}
      </a>
    {% endif %}
  {% endfor %}
</div>
