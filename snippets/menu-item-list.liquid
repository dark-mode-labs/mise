<div class="menu-item group w-full flex gap-4 md:gap-6 items-start py-4 border-b border-dashed border-[var(--color-text)]/10 last:border-0">
  {% if item.image %}
    <div class="flex-shrink-0 w-16 h-16 md:w-20 md:h-20 rounded-global overflow-hidden bg-gray-100">
      {% render 'media', src: item.image, ratio: 'square', fit: 'cover' %}
    </div>
  {% endif %}

  <div class="flex-grow flex flex-col w-full">
    <div class="flex items-baseline justify-between w-full">
      <div class="flex items-center gap-2">
        <h4 class="font-heading font-bold text-lg leading-none">{{ item.name }}</h4>

        {% if item.badges.size > 0 %}
          <div class="flex gap-1">
            {% for badge in item.badges %}
              <span class="text-[10px] uppercase tracking-wider px-1.5 py-0.5 rounded border border-current opacity-60">
                {{ badge }}
              </span>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <div class="flex-grow mx-2 border-b border-dotted border-current opacity-30 relative -top-1"></div>

      <div class="font-bold font-heading text-lg whitespace-nowrap">
        {{ item.price | money_with_currency }}
      </div>
    </div>

    {% if item.description != blank %}
      <div class="opacity-70 text-sm mt-1 max-w-prose">
        {{ item.description }}
      </div>
    {% endif %}
  </div>
</div>
