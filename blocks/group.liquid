{% comment %}
  LOGIC:
  - Sizing: We toggle between 'w-full' (Fill) and 'w-max max-w-full' (Fit).
  - Glass: If enabled, we lower the bg opacity slightly and add backdrop-blur.
{% endcomment %}

{% assign scheme_class = '' %}
{% unless block.settings.inherit_color_scheme %}
  {% assign scheme_class = 'color-' | append: block.settings.color_scheme %}
{% endunless %}

{% capture width_class %}
  {% if block.settings.width_mode == 'fit' %}w-fit max-w-full mx-auto
  {% elsif block.settings.width_mode == 'fixed' %}w-full max-w-[{{ block.settings.fixed_width }}px] mx-auto
  {% else %}w-full{% endif %}
{% endcapture %}

{% capture glass_class %}
  {% if block.settings.enable_glass %}backdrop-blur-md bg-opacity-80 border border-white/10{% endif %}
{% endcapture %}

<div
  class="group-block relative z-content {{ width_class }} flex flex-col overflow-hidden transition-all {{ scheme_class }} {{ glass_class }} rounded-global bg-body text-body"
  style="
    padding: {{ block.settings.padding }}px;
    gap: {{ block.settings.gap }}px;
    align-items: {{ block.settings.align_items }};
    text-align: {{ block.settings.text_align }};
    {% if block.settings.shadow %}box-shadow: 0 8px 32px rgba(0,0,0,0.15);{% endif %}
    opacity: {{ block.settings.opacity | divided_by: 100.0 }};
  "
>
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Group (Container)",
  "settings": [
    {
      "type": "header",
      "content": "Theme"
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "Inherit Color Scheme",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Sizing & Layout"
    },
    {
      "type": "select",
      "id": "width_mode",
      "label": "Width",
      "options": [
        { "value": "fill", "label": "Fill Container" },
        { "value": "fit", "label": "Fit to Content" },
        { "value": "fixed", "label": "Fixed Width" }
      ],
      "default": "fit"
    },
    {
      "type": "range",
      "id": "fixed_width",
      "label": "Fixed Max Width (px)",
      "min": 200,
      "max": 800,
      "step": 10,
      "default": 400,
      "info": "Only applies if 'Fixed Width' is selected."
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap (px)",
      "min": 0,
      "max": 60,
      "default": 16
    },
    {
      "type": "select",
      "id": "align_items",
      "label": "Inner Alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Surface Design"
    },
    {
      "type": "checkbox",
      "id": "enable_glass",
      "label": "Enable Glass Effect",
      "default": false,
      "info": "Adds blur and subtle border. Best for dark backgrounds."
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding (px)",
      "min": 0,
      "max": 80,
      "default": 32
    },
    {
      "type": "range",
      "id": "opacity",
      "label": "Opacity",
      "min": 0,
      "max": 100,
      "default": 100
    },
    {
      "type": "checkbox",
      "id": "shadow",
      "label": "Show Shadow",
      "default": true
    }
  ],
  "blocks": [{ "type": "@theme" }]
}
{% endschema %}
