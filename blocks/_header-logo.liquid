{% assign s = block.settings %}
{% assign asset_src = shop.logo_src | default: s.logo %}

<a href="/" class="header-logo flex items-center justify-center relative z-content group-hover:opacity-100 h-full">
  {% if asset_src != blank %}
    <div
      class="logo-inverse transition-opacity duration-300 block"
      style="width: {{ s.width }}px;"
    >
      {% render 'media', src: asset_src, ratio: 'auto', fit: 'contain', class: 'bg-transparent', loading: 'eager' %}
    </div>
  {% else %}
    <span class="text-xl font-bold font-heading uppercase tracking-widest whitespace-nowrap">{{ shop.name }}</span>
  {% endif %}
</a>

{% schema %}
{
  "name": "Header Logo",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo", "conditional": "shop.logo_src == blank" },
    { "type": "range", "id": "width", "label": "Width", "min": 50, "max": 400, "default": 120, "unit": "px" }
  ]
}
{% endschema %}
