{% assign s = section.settings %}
{% if s.image != blank or s.bg_color != blank %}
  <div class="fixed inset-0 -z-50 w-full h-full pointer-events-none" style="background-color: {{ s.bg_color }};">
    {% if s.image != blank %}
      <div class="w-full h-full opacity-100">
        {% render 'media', src: s.image, fit: 'cover', loading: 'eager' %}
      </div>
      <div class="absolute inset-0 bg-black" style="opacity: {{ s.overlay | divided_by: 100.0 }}"></div>
    {% endif %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Global Background",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Background Image" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#ffffff" },
    { "type": "range", "id": "overlay", "label": "Overlay Opacity", "min": 0, "max": 90, "step": 10, "default": 0 }
  ],
  "presets": [{ "name": "Global Background" }]
}
{% endschema %}
